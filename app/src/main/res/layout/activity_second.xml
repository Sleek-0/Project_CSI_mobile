
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F4FF"
    tools:context=".SecondActivity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/show_bar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#E7F4FF"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/doc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/doctor" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-350dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#0884E6"
                android:text="Book now"
                android:textSize="25dp"
                android:id="@+id/booknow"/>

            <TextView
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-160dp"
                android:layout_marginTop="115dp"
                android:text="Schedule an appointment"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="117dp"
                android:layout_height="170dp"
                android:src="@drawable/services" />

            <ImageButton
                android:layout_marginLeft="30dp"
                android:layout_width="106dp"
                android:layout_height="153dp"
                android:src="@drawable/specialist"
                android:layout_marginTop="18dp" />

            <ImageButton
                android:layout_marginLeft="30dp"
                android:layout_width="106dp"
                android:layout_height="153dp"
                android:src="@drawable/clinichour"
                android:layout_marginTop="18dp"
                android:id="@+id/clinichour"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="106dp"
                android:layout_height="153dp"
                android:src="@drawable/promos" />

            <ImageButton
                android:layout_marginLeft="30dp"
                android:layout_width="106dp"
                android:layout_height="153dp"
                android:src="@drawable/rewards"
                android:layout_marginTop="0dp" />

            <ImageButton
                android:layout_marginLeft="30dp"
                android:layout_width="106dp"
                android:layout_height="153dp"
                android:src="@drawable/community" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_bar" />

</androidx.drawerlayout.widget.DrawerLayout>
