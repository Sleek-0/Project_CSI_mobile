<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:background="#E1EEFA"
    >

    <ImageView
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/doc" />

    <LinearLayout
        android:layout_width="486dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/doctor" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-350dp"
            android:layout_marginTop="200dp"
            android:backgroundTint="#226DD8"
            android:text="Book now"
            android:textSize="25dp" />

        <TextView
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="115dp"
            android:text="Shedule an apointement"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="62dp"
            android:layout_marginLeft="-363dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/service" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="65dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/consultant" />

        <ImageButton
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="95dp"
            android:src="@drawable/clinichour" />

        <ImageButton
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:layout_marginLeft="-315dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/consultant" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/rewards" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="73dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="260dp"
            android:src="@drawable/community" />





    </LinearLayout>
</LinearLayout>